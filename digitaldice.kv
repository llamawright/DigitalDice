<MButton@Button>:
    text: "free"
    code: ""
    text_size: self.size
    font_size: '18sp'
    halign: 'center'
    valign: 'middle'
    markup: True

<SLabel@Label>:
    text: ""
    color: 0, 0.7, 0.7, 1
    font_size: '25sp'
    markup: True
    bold: True


<MainForm>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.4
        Label:
            text: "D i g i a l   D i c e"
            color: 0.5, 0, 0.5, 1
            font_size: '25sp'
    BoxLayout:
        size_hint_y: 0.4
        Label:
            id: l0
            text: str(root.howMany)
            size_hint: 0.1, 0.7
        TextInput:
            id: t0
            text: "enter here to program the top buttons"
            font_size: '16sp'
            size_hint: 0.6, 0.7
            background_color: 0.5, 0.5, 0.5, 1
            foreground_color: 0, 1, 1, 1
        Button:
            text: 'Program'
            size_hint: 0.1, 0.7
            on_press: root.isProgram = not root.isProgram
            background_color: [1, 0, 0, 1] if root.isProgram else [1, 1, 1, 1]
        Button:
            text: 'Caption'
            size_hint: 0.1, 0.7
            on_press: root.isCaption = not root.isCaption
            background_color: [0, 1, 0, 1] if root.isCaption else [1, 1, 1, 1]
        Button:
            text: 'Clear'
            size_hint: 0.1, 0.7
            on_press: root.clear_all()
        Button:
            text: 'Roll'
            size_hint: 0.1, 0.7
            on_press: root.dorolls()
    BoxLayout:
        padding: 5
        SLabel:
            id: s0
        SLabel:
            id: s1
        SLabel:
            id: s2
        SLabel:
            id: s3
        SLabel:
            id: s4
        SLabel:
            id: s5
        SLabel:
            id: s6
        SLabel:
            id: s7
        SLabel:
            id: s8
        SLabel:
            id: s9
    BoxLayout:
        Button:
            id: d0
            dx: 0
            text: "#2"
            on_press: root.roll(self)
        Button:
            id: d1
            dx: 1
            text: "#3"
            on_press: root.roll(self)
        Button:
            id: d2
            dx: 2
            text: "#4"
            on_press: root.roll(self)
        Button:
