<MButton@Button>:
    text: "Ping"
    code: ""
    text_size: self.size
    font_size: '18sp'
    halign: 'center'
    valign: 'middle'

<SLabel@Label>:
    font_size: '25sp'
    bold: True


<MainForm>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.4
        Label:
            text: "D i g i a l   D i c e"
            color: 0.5,0,0.5,1
            font_size: '25sp'
    BoxLayout:
        size_hint_y: 0.4
        Label:
            id: l0
            text: str(root.howMany)
            size_hint: 0.1, 0.7
        TextInput:
            id: t0
            text: "enter here to program the top buttons"
            font_size: '16sp'
            size_hint: 0.6, 0.7
            background_color: 0.5, 0.5, 0.5, 1
            foreground_color: 0, 1, 1, 1
        Button:
            text: 'Clear'
            size_hint: 0.1, 0.7
            on_press: root.clearAll()
        Button:
            text: 'Caption'
            size_hint: 0.1, 0.7
            on_press: root.isCaption = not root.isCaption
            background_color: [0, 1, 0, 1] if root.isCaption else [1, 1, 1, 1]
        Button:
            text: 'Program'
            size_hint: 0.1, 0.7
            on_press: root.isProgram = not root.isProgram
            background_color: [1, 0, 0, 1] if root.isProgram else [1, 1, 1, 1]
    BoxLayout:
        padding: 5
        SLabel:
            id: s0
            text: "0"
        SLabel:
            id: s1
            text: "0"
        SLabel:
            id: s2
            text: "0"
        SLabel:
            id: s3
            text: "0"
        SLabel:
            id: s4
            text: "0"
        SLabel:
            id: s5
            text: "0"
        SLabel:
            id: s6
            text: "0"
        SLabel:
            id: s7
            text: "0"
        SLabel:
            id: s8
            text: "0"
        SLabel:
            id: s9
            text: "0"
    BoxLayout:
        MButton:
            id: b0
            on_press: root.macro(0)
        MButton:
            id: b1
            on_press: root.macro(1)
        MButton:
            id: b2
            on_press: root.macro(2)
        MButton:
            id: b3
            on_press: root.macro(3)
        MButton:
            id: b4
            on_press: root.macro(4)
        MButton:
            id: b5
            on_press: root.macro(5)
        MButton:
            id: b6
